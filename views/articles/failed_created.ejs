<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

    <header>
        <% include ../partials/header %>
    </header>

    <div class="row clearfix">
        <div class="col-sm-6 col-sm-offset-3">

          <h1><span class="fa fa-clipboard"></span> Add Article</h1>

          <!-- ARTICLE FORM -->
          <form action="/article" method="post">
            <% include ../shared/error_messages %>
            <div class="form-group">
              <label>Title</label>
              <input type="text" class="form-control" name="title" value="<%= article.title %>">
            </div>
            <div class="form-group">
              <label>Description</label>
              <input type="text" class="form-control" name="description" value="<%= article.description %>">
            </div>
            <div class="form-group">
              <label>Content</label>
              <textarea class="form-control" name="content"><%= article.content %></textarea>
            </div>

            <button type="submit" class="btn btn-warning btn-lg">Submit Article</button>
          </form>

          <hr>

          <p><a href="/articles">Back</a></p>

        </div>
    </div>
    

    <footer>
        <% include ../partials/footer %>
    </footer>
    <% include ../partials/javascripts %>
</body>
</html>